[include]
    path = ~/.git_user

[core]
    autocrlf = input
    excludesfile = ~/.gitignore_global

[push]
    default = current

[color]
    ui = true

[color "status"]
    added = green bold
    changed = yellow bold
    untracked = red bold

[alias]
    # git aliases
    st = status
    ci = commit
    co = checkout
    cb = checkout -b
    br = branch -av
    fe = fetch
    feo = fetch origin
    re = rebase
    pl = pull
    plo = pull origin
    ps = push
    pso = push origin
    last = log --stat -1
    list = log --pretty=fuller
    info = !git branch -av && git remote -v
    cfgl = config --list

    # git-flow aliases
    gfi = flow init -d
    ffs = flow feature start
    fff = flow feature finish
    frs = flow release start
    frf = flow release finish
    fhs = flow hotfix start
    fhf = flow hotfix finish
