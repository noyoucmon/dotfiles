{
  "extends": ["tslint:latest"],
  "rules": {
    "quotemark": {
      "options": ["single", "avoid-escape"]
    },
    "trailing-comma": {
      "options": {
        "multiline": "never",
        "singleline": "never"
      }
    },
    "no-unused-expressions": [
      "error",
      {
        "allowShortCircuit": true,
        "allowTernary": true,
        "allowTaggedTemplates": true
      }
    ]
  }
}
